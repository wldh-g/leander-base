{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext",
    ],
    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./run",
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/core"
    ]
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./node_modules/**/*",
  ]
}
